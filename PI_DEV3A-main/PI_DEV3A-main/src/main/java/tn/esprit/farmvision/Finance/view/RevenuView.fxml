<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.farmvision.Finance.controller.RevenuController">
    <children>
        <Label text="Ajouter un Revenu" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1a4d2e;" />

        <VBox spacing="5.0">
            <Label text="Montant (€)" style="-fx-font-weight: bold;" />
            <TextField fx:id="txtMontant" promptText="Ex: 1500.00" />
        </VBox>

        <VBox spacing="5.0">
            <Label text="Source" style="-fx-font-weight: bold;" />
            <TextField fx:id="txtSource" promptText="Ex: Vente légumes, Subvention..." />
        </VBox>

        <VBox spacing="5.0">
            <Label text="Description" style="-fx-font-weight: bold;" />
            <TextArea fx:id="txtDescription" promptText="Détails..." prefRowCount="3" />
        </VBox>

        <VBox spacing="5.0">
            <Label text="Date" style="-fx-font-weight: bold;" />
            <DatePicker fx:id="datePicker" />
        </VBox>

        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <Button text="Annuler" onAction="#handleAnnuler" style="-fx-background-color: #e2e8f0; -fx-text-fill: #334155;" />
            <Button text="Enregistrer" onAction="#handleAjouter" style="-fx-background-color: #1a4d2e; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </children>
</VBox>